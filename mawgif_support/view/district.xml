<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		################################ maw.district Views
		################################################
		<record id="district_form_view" model="ir.ui.view">
			<field name="name">maw.district.form.view</field>
			<field name="model">maw.district</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string=" Details">
					<group>
						<group>
							<field name="name" />
							<field name="city_id" options='{"no_open": True, "no_create": True}'/>
							<field name="operation_categ" options='{"no_open": True, "no_create": True}'/>
							<field name="user_ids" domain="[('cso','=', True)]" options='{"no_open": True, "no_create": True}'>
							<tree>
								<field name="name" />
							</tree>
							</field>
							<field name="manager" domain="[('manager_group_id','=',True)]" options='{"no_open": True, "no_create": True}'/>
						</group>
						<group>
						</group>
					</group>
				</form>
			</field>
		</record>

		<record id="district_tree_view" model="ir.ui.view">
			<field name="name">maw.district.tree.view</field>
			<field name="model">maw.district</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string=" Details">
					<field name="name" />
					<field name="city_id" />
					<field name="operation_categ" />
				</tree>
			</field>
		</record>

		<record id="district_search" model="ir.ui.view">
			<field name="name">districtsearch</field>
			<field name="model">maw.district</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Search ">
					<field name="name" />
					
					<filter string="In Progress" name="progress" icon="terp-personal-"
						domain="[('state','in', ('new','opened','assigned','solved'))]" help="progress" context="{'order_by':'create_date_n asc'}" />

					<filter string="Closed" icon="terp-personal-"
						domain="[('state','=', 'closed')]" help="Closed" context="{'order_by':'date_closed desc'}" />

					<group expand="0" string="Group By">
						<filter string="City" icon="terp-personal" domain="[]"
							help="City" context="{'group_by':'city_id'}" />
						<filter string="Category" icon="terp-personal" domain="[]"
							help="Category" context="{'group_by':'operation_categ'}" />
					</group>
				</search>
			</field>
		</record>

		################################ course window action
		################################################

		<record id="district_win_act" model="ir.actions.act_window">
			<field name="name">Operation</field>
			<field name="res_model">maw.district</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		################################ menuitem course
		################################################


		<menuitem action="district_win_act" id="district_side_active_mi"
			name="Operation" sequence="33" parent="configuration_side_mi" />

	</data>
</openerp>	












