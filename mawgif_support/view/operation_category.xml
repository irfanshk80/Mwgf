<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		################################ maw.plate.type Views
		################################################
		<record id="operation_categ_form_view" model="ir.ui.view">
			<field name="name">maw.operation.category.form.view</field>
			<field name="model">maw.operation.category</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Operation Category">
					<group>
						<group>
							<field name="name" />
							<field name="parent_id" />
						</group>
						<group>
							<field name="description" />
						</group>
					</group>
				</form>
			</field>
		</record>


		<record id="operation_categ_tree_view" model="ir.ui.view">
			<field name="name">maw.operation.category.tree.view</field>
			<field name="model">maw.operation.category</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Operation Category">
					<field name="name" />
					<field name="parent_id" />
					<field name="description" />
				</tree>
			</field>
		</record>




		<record id="operation_categ_search" model="ir.ui.view">
			<field name="name">maw_operation_categ_search</field>
			<field name="model">maw.operation.category</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Search ">
					<field name="name" />
					<field name="description" />
				</search>
			</field>
		</record>

		################################ course window action
		################################################

		<record id="operation_categ_win_act" model="ir.actions.act_window">
			<field name="name">Operation Category</field>
			<field name="res_model">maw.operation.category</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		################################ menuitem course
		################################################


		<menuitem action="operation_categ_win_act" id="operation_categ_win_act_mi"
			name="Operation Category" sequence="33" parent="configuration_side_mi" />

	</data>
</openerp>	












