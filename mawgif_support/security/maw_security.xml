<?xml version="1.0"?>
<openerp>
	<data noupdate="0">

		<record id="group_customer_service" model="res.groups">
			<field name="name">Customer Service Officer</field>
		</record>

		<record id="group_call_center" model="res.groups">
			<field name="name">Call Center Agent</field>
		</record>

		<record id="group_manager" model="res.groups">
			<field name="name">Mawgif Manager</field>
			<field name="users" eval="[(4, ref('base.user_root'))]" />
		</record>

		<record id="customer_support_personal_rule" model="ir.rule">
			<field name="name">Personal Support Tickets</field>
			<field ref="model_maw_claim" name="model_id" />
			<field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
			<field name="groups" eval="[(4, ref('mawgif_support.group_customer_service'))]" />
		</record>

		<record id="sale_order_see_all" model="ir.rule">
			<field name="name">All Support Tickets</field>
			<field ref="model_maw_claim" name="model_id" />
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups" eval="[(4, ref('mawgif_support.group_call_center')),(4, ref('mawgif_support.group_manager'))]" />
		</record>
		
		<record id="group_no_messgng" model="res.groups">
            <field name="name">No Messaging</field>
        </record>

        <record id="mail.mail_feeds_main" model="ir.ui.menu">
            <field name="groups_id" eval="[(3, ref('base.group_user'))]"/>
            <field name="groups_id" eval="[(4, ref('mawgif_support.group_no_messgng'))]"/>
        </record>
		

	</data>

</openerp>