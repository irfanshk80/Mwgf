<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <record id="action_open_website_support" model="ir.actions.act_url">
            <field name="name">Website Customer Support Form</field>
            <field name="target">self</field>
            <field name="url">/page/support</field>
        </record>
        <record id="base.open_menu" model="ir.actions.todo">
            <field name="action_id" ref="action_open_website_support"/>
            <field name="state">open</field>
        </record>

    </data>
    
    <data>

        <template id="layout_footer_copyright" inherit_id="website.layout_footer_copyright">
                <xpath expr="//div[@class='container mt16 mb8']/div[@class='pull-right']" position="replace"/>
        </template>

    </data>
</openerp>
